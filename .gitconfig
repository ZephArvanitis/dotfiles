[user]
	name  = Zeph Arvanitis
	email = zeph@rescale.com
[color]
	ui = true
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
    files = diff-tree --no-commit-id --name-status -r
	alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
    st = status
    ci = commit
    sw = switch
    br = branch
    qlog = !git log $(git merge-base @ origin/master)..@ --reverse --oneline
    gdiff = !cd ./$GIT_PREFIX && git diff $(git merge-base @ origin/master)..@
    orebase = rebase origin/master
    osquash = !git reset --soft $(git merge-base @ origin/master) && git commit -m "temp" && git orebase
    pusho = !git push origin HEAD:zeph/$(git rev-parse --symbolic-full-name --abbrev-ref HEAD)
    pullo = !git pull origin zeph/$(git rev-parse --symbolic-full-name --abbrev-ref HEAD)
    gst = !git diff $(git merge-base @ origin/master)..@ --name-only
    cp = cherry-pick

[core]
	excludesfile = /Users/zeph/.gitignore_global
	editor = vim
	autocrlf = input
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[pull]
	rebase = true
